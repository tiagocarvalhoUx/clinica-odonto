generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(sequence())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(FUNCIONARIA)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
  budgets   Budget[]

  @@map("users")
}

model Patient {
  id        Int       @id @default(sequence())
  name      String
  phone     String?
  email     String?
  cpf       String?
  birthDate DateTime? @map("birth_date")
  address   String?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  budgets   Budget[]

  @@map("patients")
}

model Dentist {
  id        Int      @id @default(sequence())
  name      String
  cro       String   @unique
  phone     String?
  email     String?
  specialty String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
  budgets   Budget[]

  @@map("dentists")
}

model Budget {
  id         Int          @id @default(sequence())
  patientId  Int          @map("patient_id")
  dentistId  Int?         @map("dentist_id")
  total      Decimal      @db.Decimal(10, 2)
  discount   Decimal      @default(0) @db.Decimal(10, 2)
  finalTotal Decimal      @map("final_total") @db.Decimal(10, 2)
  status     BudgetStatus @default(EM_NEGOCIACAO)
  notes      String?
  createdBy  Int          @map("created_by")
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @default(now()) @updatedAt @map("updated_at")
  patient    Patient      @relation(fields: [patientId], references: [id], onDelete: Cascade)
  dentist    Dentist?     @relation(fields: [dentistId], references: [id], onDelete: SetNull)
  user       User         @relation(fields: [createdBy], references: [id])
  items      BudgetItem[]

  @@map("budgets")
}

model BudgetItem {
  id          Int      @id @default(sequence())
  budgetId    Int      @map("budget_id")
  description String
  quantity    Int      @default(1)
  unitPrice   Decimal  @map("unit_price") @db.Decimal(10, 2)
  total       Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now()) @map("created_at")
  budget      Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)

  @@map("budget_items")
}

enum UserRole {
  ADMIN
  FUNCIONARIA
}

enum BudgetStatus {
  EM_NEGOCIACAO
  ACEITO
  RECUSADO
}
